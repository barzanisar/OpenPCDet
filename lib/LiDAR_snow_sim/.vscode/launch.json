            "cwd": "${workspaceFolder}",
            "args": [
                "--datasets",
                "/media/barza/WD_BLACK/datasets"
            ]
        },
        {
            "name": "precompute",
            "type": "python",
            "request": "launch",
            "module": "tools.snowfall.precompute",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "sampling",
            "type": "python",
            "request": "launch",
            "module": "tools.snowfall.sampling",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "simulation",
            "type": "python",
            "request": "launch",
            "module": "tools.snowfall.simulation",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "pc_viewer",
            "type": "python",
            "request": "launch",
            "module": "tools.visual_utils.pc_viewer",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
